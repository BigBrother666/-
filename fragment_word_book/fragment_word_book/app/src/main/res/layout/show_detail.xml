<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlankFragment_showdetail">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/show">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/word_textview"
            android:text="单词:"
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintHorizontal_bias="0.07"
            android:paddingVertical="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/v_textview"
            android:text="词性:"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/word_textview"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintHorizontal_bias="0.07"
            android:paddingVertical="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/notes_textview"
            android:text="注释:"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/v_textview"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintHorizontal_bias="0.07"
            android:paddingVertical="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/example_textview"
            android:text="例句:"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/notes_textview"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintHorizontal_bias="0.07"
            android:paddingVertical="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/word_view"
            android:text=""
            android:textSize="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/word_textview"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintHorizontal_bias="0.07"
            android:paddingVertical="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/v_view"
            android:text=""
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/word_view"
            app:layout_constraintLeft_toRightOf="@id/v_textview"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintHorizontal_bias="0.07"
            android:paddingVertical="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/notes_view"
            android:text=""
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/v_view"
            app:layout_constraintLeft_toRightOf="@id/notes_textview"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintHorizontal_bias="0.07"
            android:paddingVertical="5dp"
            />
        <TextView
            android:layout_width="310dp"
            android:layout_height="wrap_content"

            android:id="@+id/example_view"
            android:text=""
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@id/notes_view"
            app:layout_constraintLeft_toRightOf="@id/example_textview"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="20dp"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintHorizontal_bias="0.07"
            android:paddingVertical="5dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>